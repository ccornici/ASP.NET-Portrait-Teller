@{
    ViewBag.Title = "Face Teller";
}

<div class="mdl-grid centered">
    <!-- Simple Textfield -->
    <div class="mdl-card mdl-shadow--4dp main-card">
        <div class="mdl-card__title">The Face Teller</div>
        <div class="mdl-grid">
            <form action="@Url.Action("ProcessImage", "Home")">
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input"
                           type="text"
                           name="imageUrl"
                           id="imageUrl">
                    <label class="mdl-textfield__label" for="imageUrl">Image URL</label>
                </div>
                <input type="submit" value="Process Image" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
            </form>
        </div>
    </div>
</div>
